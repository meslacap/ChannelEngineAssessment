@using ChannelEngineAssessment.Services.Models
@model IEnumerable<Order>;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table id="orderTable" class="table table-hover">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>GTIN</th>
            <th>Quantity</th>
            <th>Update Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order order in Model)
        {
            <tr>
                <td>@order.ChannelName</td>
                @foreach (var line in order.Lines)
                {                        
                    <td>@line.GTIN</td>
                    <td>@line.Quantity</td>
                }
                <td>
                    @Html.ActionLink("Update stock to 25", "UpdateStockByOrderId", "Home", new { orderId = order.Id }, new { @class = "btn btn-primary"})
                </td>
                
            </tr>        
        }
    </tbody>
</table>
</div>
